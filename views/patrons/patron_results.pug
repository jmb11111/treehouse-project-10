extends ../layout
block main
    h1= title
    p
      form(action="/patrons/search", method="get")
        input(type="text",id ="searchField", name='query', placeholder='Search here')
        input(type='submit', id ="searchButton" value="search")
        a.button(href='/patrons/new', id ="bookButton") Create New Patron
    
    table
      thead
        tr
          th Name
          th Address
          th Email
          th Library ID
          th Zip
      tbody
      each patron in patrons
        tr
          td
            a(href=`/patrons/patron-detail/${patron.id}`) #{patron.first_name +' '+ patron.last_name}
          td= patron.address
          td= patron.email
          td= patron.library_id
          td= patron.zip


      