extends ../layout
block main
    h1 New Loan
    form(action="/loans/new", method="post" id="new_loan")
      p
        label(for='book_id') Book
        select(id="book_id", name="book_id", form="new_loan")
          each book in books
            option(type="integer", name="book_id", value=book.id) #{book.id + " " + book.title}
      p
        label(for='Patron_id') Patron
        select(id="PatronId", name="PatronId", form="new_loan")
          each patron in patrons
            option(type="integer", name="PatronId", value=patron.id) #{patron.first_name +" " + patron.last_name}

      p
        label(for='loaned_on') Loaned on:
        input#loaned_on(type='date',name="loaned_on", value=loan.loaned_on)
       

      p
        label(for='return_by') Return by:
        input#return_by(type='date',name="due_on", value= loan.loaned_on)
      p
        input(type='submit', value='Create New Loan')
