extends ../layout
block main
    h1 Books

    p
      form(action="/books/search", method="get")
        input(type="text",id ="searchField", name='query', placeholder='Search here')
        input(type='submit', id ="searchButton" value="Search")
        a.button(href='/books/new', id ="bookButton") Create New Book
    p
      | Filters
      a(href='/books/all-books') All
      | |
      a(href='/books/overdue_books') Overdue
      | |
      a(href='/books/checked_books') Checked Out

    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year Released
      tbody
      each book in books
        tr
          td
            a(href=`/books/book_detail/${book.id}`)= book.title
          td= book.author
          td= book.genre
          td= book.first_published
    p Total Results #{count}
    p Page 
      each page, index in pageMaker
        a(href=`/books/page/${index+1}`) #{index+1}      
